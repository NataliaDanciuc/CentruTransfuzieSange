@page "{id:int?}"

@model CentruTransfuzieSange.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].MedicalService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AppointmentData.Appointments) {
            string selectedRow = "";
            if(item.ID==Model.AppointmentID){
                selectedRow = "table-success";
            }
            

        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalService.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.AppointmentData.Doctor != null)
{
    <h3>Doctors by Selected Appointment</h3>
    <table class="table">

        @foreach (var item in Model.AppointmentData.Appointments)
        {
            string selectedRow = "";
            if (item.ID == Model.AppointmentID)
            {
                selectedRow = "table-success";
            }
            
        }
    </table>
}
