<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].MedicalService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Date)
