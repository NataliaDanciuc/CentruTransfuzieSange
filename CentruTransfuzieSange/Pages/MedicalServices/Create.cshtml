    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MedicalService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicalService.ServiceName" class="control-label"></label>
                <input asp-for="MedicalService.ServiceName" class="form-control" />
