            </div>
            <div class="form-group">
                <label asp-for="MedicalService.DoctorID" class="control-label">Doctor Name</label>
                <select asp-for="MedicalService.DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
                <span asp-validation-for="MedicalService.DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

