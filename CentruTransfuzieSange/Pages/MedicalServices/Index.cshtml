@page
@model CentruTransfuzieSange.Pages.MedicalServices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
<div class="form-actions no-color">
    <p>
        Find by Medical Service Name / Doctor Name:
        <input type="text" name="SearchString" value="@Model.CurrentFilter"
        />
 <input type="submit" value="Search" class="btn btn-primary" /> |
 <a asp-page="./Index">Back to full List</a>
 </p>
 </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicalService[0].ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalService[0].Doctor.DoctorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MedicalService) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.DoctorName)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
